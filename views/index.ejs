            <div class="container">
                <h1>Recent Post</h1>
                <div>
                    <div class="flex-container">
                        <% for ( var i=0; i < blog.length; i++ ){ %>
                            <div class="flex-item">
                                <div class="flex-header">
                                    <%= blog[i].header %>
                                </div>
                                <div class="flex-content">
                                    <%= blog[i].content %>
                                </div>
                                <div class="flex-author">
                                    Author: <%= blog[i].author %>
                                </div>
                                <div class="flex-date">
                                    Date:<%= blog[i].date %> 
                                </div>
                                <div class="flex-command">
                                    <a href="/posts/edit/<%= blog[i].id %>" class="btn edit">Edit</a>
                                    <a href="/posts/delete/<%= blog[i].id %>" class="btn delete">Delete</a>
                                </div>
